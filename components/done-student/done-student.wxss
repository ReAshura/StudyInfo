/* components/done-student/done-student.wxss */
@import '../../utils/iconfont.wxss';
.listbox {
  overflow: hidden;
}
.listhead {
  margin-top: 48rpx;
  display: flex;
  justify-content: space-between;
  padding-right: 38rpx;
  box-sizing: border-box;
  align-items: flex-end;
}
.comlus{
  height: 58rpx;
  width: 12rpx;
  background-color: #29833c;
  border-radius: 12rpx;
}
.listtext {
  margin-left: 28rpx;
  font-size: 38rpx;
}
.listtitle {
  display: flex;
  align-items: center;
}
.run::after {
  content: '\e621';
  font-size: 26rpx;
}
.listnext {
  color: #adb0b3;
}
.list_cont {
  padding: 0 32rpx;
  box-sizing: border-box;
}

.list_item {
  padding: 42rpx 0;
  box-sizing: border-box;
  display: flex;
  border-bottom: 1rpx solid #d7d7d7;
  justify-content: space-between;
  align-items: center;
}
.list_item:last-child{
  border:none;
}
.item_left {
  display: flex;
  align-items: center;
}
.item_left>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}
.item_left>view{
  width: 180rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.item_right {
  width: 370rpx;
  font-size: 32rpx;
  line-height:46rpx;
  text-align: center;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}