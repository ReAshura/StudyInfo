/* components/search-input/search-input.wxss */
@import '../../utils/iconfont.wxss';
.searchbox {
  width: 100%;
  padding: 0 32rpx;
  text-align: center;
  box-sizing: border-box;
  margin-bottom: 22rpx;
  position: relative;
}
.searchbox>input {
  background-color: #f6f6f6;
  border-radius: 50rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: none;
  padding: 0 80rpx 0 0;
  box-sizing: border-box;
}
.search::after {
  display: block;
  content: '\e7f2';
  position: absolute;
  font-size: 46rpx;
  color: #d8d3d3;
  top: 6rpx;
  right: 50rpx;
  z-index: 9999;
}