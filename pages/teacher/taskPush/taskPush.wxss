/* pages/teacher/taksPush/taksPush.wxss */

.popup {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  z-index: 99;
  top: 0;
  left: 0;
  overflow: hidden;
}

.popbox {
  width: 90%;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 8rpx;
  margin-top: 220rpx;
  position: relative;
}

.iconbox {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 34rpx;
  padding-bottom: 26rpx;
  box-sizing: border-box;
}

.babytjBtn {
  margin-top: 80rpx;
  font-size: 28rpx;
  border: none;
  background-color: #29833c;
  color: #fff;
}
.activBox {
  padding: 22rpx 18rpx;
  box-sizing: border-box;
  min-height: 60rpx;
  border-top: 1rpx solid #cccccc;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.tagBox {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.tagitem {
  width: 48%;
  height: 72rpx;
  border-radius: 8rpx;
  border: 1rpx solid #818181;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  line-height: 72rpx;
  padding-left: 16rpx;
  box-sizing: border-box;
}
.activitem {
  background-color: #bfe8ff;
  color: #124562;
  border-radius: 8rpx;
  height: 68rpx;
  line-height: 68rpx;
  padding-left: 16rpx;
  box-sizing: border-box;
  width: 48%;
  position: relative;
  margin-top: 28rpx;
}
.activitem>view {
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.activitem>icon {
  position: absolute;
  top: -18rpx;
  right: -18rpx;
}