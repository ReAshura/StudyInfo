/* pages/teacher/myStudent/myStudent.wxss */
@import '../../../utils/iconfont.wxss';
.header {
  display: flex;
  padding: 0 100rpx 0 40rpx;
  box-sizing: border-box;
  justify-content: space-between;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #f0f0f0;
  text-align: center;
}
.t1 {
  width: 40%;
  text-align: left;
}
.t2{
  width: 30%;
}
/* 学生列表开始 */
.studentList {
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.s_item {
  padding: 22rpx 70rpx 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #d4d4d4;
  position: relative;
  display: flex;
  align-content: center;
  justify-items: center;
}
.s_item:last-child {
  border-bottom: none;
}
.item_info>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}
.s_item>view {
  display: flex;
  justify-content: center;
  align-items: center;
}
.runIcons::after {
  content: '\e621';
  font-size: 60rpx;
  position: absolute;
  right: 0rpx;
  color: #8b8b8b;
  top: 40rpx;
}
.s_item>.item_info {
  justify-content: flex-start;
  font-size: 24rpx;
}
/* 学生列表结束 */

.tagListBox>.title {
  text-align: center;
  font-size: 34rpx;
  margin-bottom: 20rpx;
}
.tagListBox>.box {
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  flex-wrap: wrap;
  justify-content: center;
}
.tagListBox>.box>view {
  margin-bottom: 22rpx;
  padding: 8rpx 22rpx;
  font-size: 30rpx;
  margin-right: 22rpx;
  border: 1rpx solid #cfcfcf;
  border-radius: 8rpx;
}
.tagListBox>.box>.active {
  background-color: #cfcfcf;
  color: #fff;
}
.nodata2 {
  text-align: center;
  color: #cfcfcf;
  margin-top: 22rpx;
  font-size: 30rpx;
}