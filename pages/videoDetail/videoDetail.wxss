/* pages/videoDetail/videoDetail.wxss */
@import '../../utils/iconfont.wxss';
video {
  width: 100%;
}
.contentbox {
  padding: 42rpx 32rpx;
  box-sizing: border-box;
}
.title {
  font-size: 36rpx;
}
.timebox {
  color: #adadad;
  margin-top: 12rpx;
  font-size: 24rpx;
}
.scoresbox {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.score_left {
  display: flex;
  align-items: center;
  width: 220rpx;
}
.score_left>image {
  width: 46rpx;
  height: 46rpx;
}
.score_left>text {
  color: #d72020;
  font-size: 26rpx;
  margin-left: 8rpx;
}
.scoresbox>button {
  margin: 0;
  width: 200rpx;
  height: 58rpx;
  line-height: 57rpx;
  color: #fff;
  font-size: 26rpx;
  background-color: #29833c;
  margin-left: 12rpx;
}
.hostIcon::after {
  content: '\e628';
  color: #fff;
}
/* 上面是标题加视频 */

.tipsBox {
  border-radius: 8rpx;
  padding: 40rpx 26rpx;
  box-sizing: border-box;
  border: 1rpx solid #f2d300; 
  background-color: #fdfdee;
}
.tipsTi {
  display: flex;
  align-items: center;
  margin-bottom: 42rpx;
}
.tipsTi>text {
  margin-left: 12rpx;
  color: #ac642a;
}
.tips_cont {
  color: #6f665e;
}