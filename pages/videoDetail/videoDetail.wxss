/* pages/videoDetail/videoDetail.wxss */
@import '../../utils/iconfont.wxss';
video {
  width: 100%;
}
.contentbox {
  padding: 42rpx 32rpx;
  box-sizing: border-box;
}
.title {
  font-size: 36rpx;
}
.timebox {
  color: #adadad;
  margin-top: 12rpx;
  font-size: 24rpx;
}
.scoresbox {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.score_left {
  display: flex;
  align-items: center;
  width: 220rpx;
}
.score_left>image {
  width: 46rpx;
  height: 46rpx;
}
.score_left>text {
  color: #d72020;
  font-size: 26rpx;
  margin-left: 8rpx;
}
.scoresbox>button {
  margin: 0;
  width: 200rpx;
  height: 58rpx;
  line-height: 57rpx;
  color: #fff;
  font-size: 26rpx;
  background-color: #29833c;
  margin-left: 12rpx;
}
.hostIcon::after {
  content: '\e628';
  color: #fff;
}
/* 上面是标题加视频 */

.tipsBox {
  border-radius: 8rpx;
  padding: 40rpx 26rpx;
  box-sizing: border-box;
  border: 1rpx solid #f2d300; 
  background-color: #fdfdee;
}
.tipsTi {
  display: flex;
  align-items: center;
  margin-bottom: 42rpx;
}
.tipsTi>text {
  margin-left: 12rpx;
  color: #ac642a;
}
.tips_cont {
  color: #6f665e;
}

/* 老师选择已完成未完成 */
.speedBox {
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}
.selectTi {
  width: 100%;
  border: 1rpx solid #c4c4c4;
  border-radius: 8rpx;
  overflow: hidden;
  display: flex;

}
.selectTi>view {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.activ {
  background-color: #ececec;
}
/* 老师选择已完成未完成 */

/* 老师查看学生完成的列表 */
.list_cont {
  padding: 0 32rpx;
  box-sizing: border-box;
}
.s_item {
  padding: 22rpx 70rpx 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #d4d4d4;
  position: relative;
  display: flex;
  align-content: center;
  justify-items: center;
}
.s_item:last-child {
  border-bottom: none;
}
.item_info>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}
.s_item>view {
  display: flex;
  justify-content: center;
  align-items: center;
}
.runIcons::after {
  content: '\e621';
  font-size: 60rpx;
  position: absolute;
  right: 0rpx;
  color: #8b8b8b;
  top: 40rpx;
}
.s_item>.item_info {
  justify-content: flex-start;
  font-size: 24rpx;
}
.t1 {
  width: 40%;
  text-align: left;
}
.t2{
  width: 30%;
}
/* 老师查看学生完成的列表 */
/* 完成按钮 */
.scoresbox>.speedStyle {
  background-color: #F3F1E3;
  color: #717171;
}
.speedStyle>.hostIcon::after {
  content: '\e6c6';
  color: #717171;
}

/* 视频列表 */
.videoList {
  border-top: 1rpx solid #878787;
  margin-top: 32rpx;
}
.videoItem {
  padding: 22rpx 32rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #878787;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.listLeftV {
  display: flex;
  align-items: center;
}
.listLeftV>view {
  margin-left: 26rpx;
  font-size: 30rpx;
}
.play::after {
  content: '\e603';
  color: #8b8b8b;
  font-size: 52rpx;
}
.playbtn {
  width: 156rpx;
  height: 66rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 66rpx;
  color: #fff;
  background-color: #29833c;
  margin: 0;
}