/**index.wxss**/
page {
  width: 100%;
  height: 100%;
}
.content {
  position: relative;
  height: 100%;
  overflow: hidden;
  padding: 0 40px;
  box-sizing: border-box;
}
.content>image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.loginbox {
  width: 100%;
  margin: 260rpx auto 0;
  border-radius: 8rpx;
  padding: 18rpx 36rpx 60rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.8)
}
.loginbox>.h1{
  font-size: 42rpx;
  text-align: center;
  border-bottom: 1rpx solid #cacdc8;
  padding: 26rpx 0;
  box-sizing: border-box;
  margin-bottom: 50rpx;
}
.inputbox>input {
  border-radius: 8rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  padding: 0 12rpx 0 100rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
.loginbox>button {
  background-color: #29833c;
  color: #fff;
  font-size: 32rpx;
  margin-top: 80rpx;
  border: none;
  border-radius: 8rpx;
}
.teacherBtn {
  margin-top: 86rpx;
  background-color: #f2d300;
  border: none;
  border-radius: 8rpx;
  font-size: 32rpx;
}
.identification {
  text-align: center;
  margin-top: 110rpx;
  color: #fff;
}